<% if @current_user %>
  <h1> My activities in <%= @place["name"] %></h1>

    <div class="row">
      <% for post in @posts %>
        <div class="col-md-3 col-sm-6">
          <h4><%= post["title"] %></h4>
          <%= post["posted_on"] %>
          <p><%= post["description"] %></p>
          <% if post.uploaded_image.attached? %>
            <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
          <% else %>
            <img src="<%= post["image"] %>" class="img-fluid">
          <% end %>
        </div>
      <% end %>
<% else %>
<p class="text-danger">Please create an account and login to see the content </p>       
<% end %>      
</div>
<p><a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-info">New Post</a></p>
<p><a href="/places" class="btn btn-primary">Back to All Places</a></p>